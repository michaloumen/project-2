<main class="form-auth-container">
  <h1>Fa√ßa o login</h1>

  <form class="form-auth" action="/login/patient" method="post">
    <div>
      <label for="userEmail">Email</label>
      <input type="text" name="userEmail" id="userEmail" placeholder="Digite o seu email">
    </div>

    <div>
      <label for="userPassword">Senha</label>
      <input type="password" name="userPassword" id="userPassword" placeholder="Digite sua senha">
    </div>

    {{#if errorMessage}}
    <div>
      <span>{{errorMessage}}</span>
    </div>
    {{/if}}

    <button type="submit">Logar</button>
  </form>
</main>